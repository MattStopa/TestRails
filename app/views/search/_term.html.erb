<div>
  <div class="flex justify-between">
    <div>Foods</div>
    <div class="p-2 py-0 bg-gray-500 text-white rounded">Close</div>
  </div>
  <div data-target="search-bar.foodsList">
    <% Food.all.where(published: true).each do |food| %>
        <a href="/nutrient/<%= food.slug %>" data-value="<%= food.name %>">
          <div class="mt-1">
              <div class="bg-white p-2 border rounded hover:bg-blue-100 cursor-pointer flex">

              <img src="<%= food.image_url %>" class="w-12 h-12 rounded"/>

              <div class="mt-3 ml-5 text-lg"><%= food.name %> </div>
              </div>
          </div>
        </a>
    <% end %>
  </div>
  Tags
  <div data-target="search-bar.tagsList">
    <% Tag.all.each do |tag| %>
      <%= render 'components/tag', {tag: tag }%>
      
    <% end %>
  </div>
</div>